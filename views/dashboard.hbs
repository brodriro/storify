{{#> main}}
<div class="animate-slide-up">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h2 class="dashboard-title">Admin Dashboard</h2>
        <a href="/files/browser" class="btn btn-secondary icon-btn">
            <svg class="icon" viewBox="0 0 24 24">
                <polyline points="15 18 9 12 15 6"></polyline>
                <line x1="9" y1="12" x2="21" y2="12"></line>
            </svg>
            Volver al navegador
        </a>
    </div>

    <div class="stats-grid">
        <div class="glass-panel stat-card">
            <h3>
                <svg class="icon" viewBox="0 0 24 24" style="margin-right:0.5rem;">
                    <path
                        d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z">
                    </path>
                    <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                    <line x1="12" y1="22.08" x2="12" y2="12"></line>
                </svg>
                Storage Usage
            </h3>
            <div class="usage-files-count">
                {{stats.totalFiles}} <span class="usage-files-label">files</span>
            </div>

            <div class="usage-meta">
                <span>Total Size</span>
                <strong>{{totalSizeMb}} MB</strong>
            </div>

            <div class="usage-bar-container">
                <div class="usage-bar-fill" style="width: {{usagePercent}}%;"></div>
            </div>
            <p class="usage-note">
                Usage relative to {{config.totalStorageGb}}GB limit
            </p>
        </div>

        <div class="glass-panel stat-card">
            <h3>
                <svg class="icon" viewBox="0 0 24 24" style="margin-right:0.5rem;">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="12" y1="18" x2="12" y2="12"></line>
                    <line x1="9" y1="15" x2="15" y2="15"></line>
                </svg>
                File Types
            </h3>
            <ul class="list-clean">
                {{#each stats.fileTypes}}
                <li class="list-item-row">
                    <span style="text-transform: uppercase; font-weight: 500; font-size: 0.9rem;">{{@key}}</span>
                    <span class="badge-primary">{{this}}</span>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="glass-panel stat-card">
            <h3>
                <svg class="icon" viewBox="0 0 24 24" style="margin-right:0.5rem;">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                User Quotas
            </h3>
            <ul class="list-clean">
                {{#each userUsageMb}}
                <li class="list-item-row">
                    <span style="font-weight: 500;">{{@key}}</span>
                    <span style="color: var(--text-muted);">{{this}} MB</span>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="glass-panel stat-card">
            <h3>
                <svg class="icon" viewBox="0 0 24 24" style="margin-right:0.5rem;">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                System Backup
            </h3>
            <p style="color: var(--text-muted); font-size: 0.9rem; margin-bottom: 1rem;">
                Create and download a full backup of all user data.
            </p>
            <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                <button type="button" class="btn btn-primary icon-btn" style="width: 100%;"
                    onclick="triggerBackup()">
                    <svg class="icon" viewBox="0 0 24 24">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                    Create Backup
                </button>
                <button type="button" class="btn btn-secondary icon-btn" style="width: 100%;"
                    onclick="downloadBackup()">
                    <svg class="icon" viewBox="0 0 24 24">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="3" x2="12" y2="15"></line>
                    </svg>
                    Download Latest Backup
                </button>
                <div id="backupToast" style="display:none; margin-top:0.5rem; font-size:0.85rem; color: var(--text-muted);">
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    async function triggerBackup() {
        try {
            const res = await fetch('/admin/backup', { method: 'POST' });
            const data = await res.json().catch(() => ({}));

            if (data.inProgress) {
                showBackupToast('Ya hay un backup ejecutándose.');
            } else if (data.success) {
                showBackupToast('Backup iniciado. Se generará en segundo plano.');
            } else {
                showBackupToast('No se pudo iniciar el backup.');
            }
        } catch (e) {
            showBackupToast('Error al iniciar el backup.');
            console.error(e);
        }
    }

    function downloadBackup() {
        window.location.href = '/admin/backup/download';
    }

    function showBackupToast(message) {
        const el = document.getElementById('backupToast');
        if (!el) return;
        el.textContent = message;
        el.style.display = 'block';
        el.style.opacity = '1';
        setTimeout(() => {
            el.style.opacity = '0';
            setTimeout(() => {
                el.style.display = 'none';
            }, 300);
        }, 3000);
    }
</script>
{{/main}}