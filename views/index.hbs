{{#> main}}
<div class="login-container animate-fade-in">
    <div class="login-card">
        <h2 style="text-align: center; margin-bottom: 2rem; color: var(--primary);">Storify NAS</h2>

        <form class="login-form" action="/auth/login" method="POST">
            <div class="form-group">
                <label class="form-label">Username</label>
                <input type="text" name="username" class="form-input" placeholder="e.g. Alice" required>
            </div>

            <div class="form-group">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-input" placeholder="Enter password..." required>
            </div>

            <button type="submit" class="btn btn-submit">Login</button>
        </form>

        <div id="error-msg" class="error-msg">
            Invalid credentials
        </div>
    </div>
</div>

<script>
    // Simple query param check for error
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('error')) {
        document.getElementById('error-msg').style.display = 'block';
    }
</script>
{{/main}}